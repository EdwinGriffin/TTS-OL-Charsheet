<Defaults>
    <!-- Styling for the reset button -->
    <Button
      fontStyle="Bold"
      horizontalOverflow="Wrap"
      resizeTextForBestFit="true"
      resizeTextMinSize="12"
      resizeTextMaxSize="200"/>

    <!-- This determines the styling for input text boxes (classified as Input Fields). Colour is a key entry as it prevents the emissive in low light issue -->
    <InputField
      onEndEdit="updateField"
      colors="#FFFFFF88|#FFFFFF88|#FFFFFF88|#FFFFFF88"
      fontStyle="Bold"
      horizontalOverflow="Wrap"
      placeholder=" "
      resizeTextForBestFit="true"
      resizeTextMinSize="12"
      resizeTextMaxSize="200"/>
    
    <!-- General text styling -->
    <Text
      fontStyle="Bold"
      horizontalOverflow="Wrap"
      resizeTextForBestFit="true"
      resizeTextMinSize="12"
      resizeTextMaxSize="200"/>
    
    <!-- Styling for the toggle buttons -->
    <ToggleButton
      fontStyle="Bold"
      horizontalOverflow="Wrap"
      resizeTextForBestFit="true"
      resizeTextMinSize="12"
      resizeTextMaxSize="200"/>

    <!--Sheet-->
    <Panel
      class="sheet"
      position="0 0 -20.1"
      rotation="180 180 0"
      scale="0.08235 0.08235"
      width="1878"
      height="2429"/>

    <!--Basic Info-->
    <InputField
      class="basic"
      height="60"
      textAlignment="MiddleLeft"/>

    <Text
      class="basic"
      height="60"
      textAlignment="MiddleCenter"/>

    <!--Attributes-->
    <!-- Need text for cost & dice -->
    <Text
      class="cost_dice"
      width="116"
      height="45"
      textAlignment="MiddleCenter"/>
    <!-- Need inputfield for Score -->
    <InputField
      class="score"
      width="116"
      height="45"
      characterLimit="1"
      characterValidation="Integer"
      textAlignment="MiddleCenter"
      text="0"/>

    <!-- Defenses -->
    <!-- Need text for Guard, Toughness, Resolve -->
    <Text
      class="def"
      width="150"
      height="125"
      textAlignment="MiddleCenter"
      text="10"/>
    <!-- Need text for derived defenses -->
    <Text
      class="der_def"
      width="70"
      height="40"
      textAlignment="MiddleCenter"
      text="0"/>
    <!-- Need inputfield for armour etc. -->
    <InputField
      class="armour_other"
      width="70"
      height="52"
      characterValidation="Integer"
      textAlignment="MiddleCenter"
      text="0"/>

    <!-- Hit Points -->
    <!-- Need text for Current, Max -->
    <Text
      class="hp"
      width="111"
      height="111"
      textAlignment="MiddleCenter"/>
    <!-- Need inputfield for Other !!! Uses Def-Attr !!! -->

    <!-- Secondary Attributes -->
    <!-- Need inputfield for Damage, Lethal Damage, Wealth, Speed -->
    <InputField
      class="sec_attr"
      width="111"
      height="111"
      characterValidation="Integer"
      textAlignment="MiddleCenter"/>

    <!-- Items -->
    <!-- Need inputfield for Weapons, Equipment, Armour -->
    <InputField
      class="items"
      width="111"
      height="111"
      textAlignment="MiddleLeft"/>

    <!-- Feats -->
    <!-- Need inputfield for feats -->
    <InputField
      class="feats"
      width="111"
      height="111"
      textAlignment="MiddleLeft"/>
    <!-- Need inputfield for perks, faws -->
    <InputField
      class="perk_flaw"
      width="111"
      height="111"
      textAlignment="MiddleLeft"/>

    <!-- Points -->
    <!-- Text for attr-total, attr-spent, feat-total -->
    <Text
      class="points"
      width="111"
      height="111"
      textAlignment="MiddleCenter"/>
    <!-- inputfield for feat-spent -->
    <InputField
      class="feat_spent"
      width="111"
      height="111"
      textAlignment="MiddleCenter"/>

    <Image
      class="lock"
      position="0 0 -20.1"
      rotation="180 180 0"
      scale="0.08235 0.08235"
      width="1878"
      height="2429"
      color="#FFFFFF00"/>
</Defaults>


